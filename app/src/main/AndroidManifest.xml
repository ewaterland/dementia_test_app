<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 인터넷 연결 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 마이크 권한 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.White_butterfly"
        tools:targetApi="31">

        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 로그인 및 회원가입 -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterFinishActivity"
            android:exported="false" />

        <!-- 메인 페이지 -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- 로딩 페이지 -->
        <activity
            android:name=".LoadingActivity"
            android:exported="false" />

        <!-- 말동무(챗봇) -->
        <activity
            android:name=".ChatbotActivity"
            android:label="ChatbotActivity" />

        <!-- 치매 선별 검사 -->
        <activity
            android:name=".TestMainActivity"
            android:label="TestMainActivity" />
        <activity
            android:name=".Test1Activity"
            android:label="Test1Activity" />
        <activity
            android:name=".Test2Activity"
            android:label="Test2Activity" />
        <activity
            android:name=".Test3Activity"
            android:label="Test3Activity" />
        <activity
            android:name=".ResultActivity"
            android:exported="false" />

        <!-- 기억력 검사 -->
        <activity
            android:name=".Memory01Activity"
            android:label="Memory01Activity" />
        <activity
            android:name=".Memory02Activity"
            android:label="Memory02Activity" />
        <activity
            android:name=".Memory03Activity"
            android:label="Memory03Activity" />
        <activity
            android:name=".Memory04Activity"
            android:label="Memory04Activity" />

        <!-- 마이페이지 -->
        <activity
            android:name=".UserActivity"
            android:label="UserActivity" />

</application>

</manifest>