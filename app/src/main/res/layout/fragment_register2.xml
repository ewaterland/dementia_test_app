<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- fragment -->
    <FrameLayout
        android:id="@+id/view_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </FrameLayout>

    <!-- register2 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page_register2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 상단바 START -->
        <GridLayout
            android:id="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 로고 START -->
            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon" />
            <!-- 로고 END -->

        </GridLayout>
        <!-- 상단바 END -->

        <TextView
            android:id="@+id/text_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:gravity="start"
            android:text="이전"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_top">

        </TextView>

        <!-- 메인 START -->
        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:text="정보를 입력해 주세요"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_before" />

        <EditText
            android:id="@+id/editText_Name"
            android:layout_width="320dp"
            android:layout_height="56dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:foregroundGravity="center"
            android:hint="이름"
            android:inputType="text"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <LinearLayout
            android:id="@+id/view_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="vertical"
            android:foregroundGravity="center_vertical"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_Name">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_female"
                android:layout_width="120dp"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"

                android:background="@drawable/button_gender"

                android:fontFamily="@font/inter_semibold"
                android:text="여성"
                android:textAllCaps="false"
                android:textColor="@drawable/text_gender"
                android:textSize="20dp"

                app:layout_constraintEnd_toStartOf="@+id/btn_male"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText_Name" />

            <Button
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:background="@color/back" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_male"
                android:layout_width="120dp"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"

                android:background="@drawable/button_gender"

                android:fontFamily="@font/inter_semibold"
                android:text="남성"
                android:textAllCaps="false"
                android:textColor="@drawable/text_gender"
                android:textSize="20dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText_Name" />

        </LinearLayout>

        <DatePicker
            android:id="@+id/date_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_gender" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signup"
            android:onClick="Register"
            android:enabled="false"

            android:layout_width="320dp"
            android:layout_height="56dp"
            android:layout_marginTop="30dp"

            android:text="회원가입"
            android:textSize="24dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:background="@drawable/button_round"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_birth" />


        <!-- 메인 END -->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>