<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/pretendard_extrabold"
        android:text="진 단 결 과"
        android:textColor="@color/main"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_test_result"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/image_test_result_bad"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/text_recom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_dep_result">

    </ImageView>

    <LinearLayout
        android:id="@+id/layout_cog_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_result">

        <TextView
            android:id="@+id/text_cog_result1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:text="아주 "
            android:textColor="@color/black"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/text_cog_result2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:text="건강한 정신상태"
            android:textColor="@color/main"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_dep_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_cog_result">

        <TextView
            android:id="@+id/text_dep_result1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="우울증"
            android:textColor="@color/main"
            android:textSize="40sp"
            android:fontFamily="@font/pretendard_semibold"/>

        <TextView
            android:id="@+id/text_dep_result2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이 의심돼요"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:fontFamily="@font/pretendard_semibold"/>


    </LinearLayout>

    <TextView
        android:id="@+id/text_recom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="검사는 6개월 주기를 권장합니다."
        android:textColor="#A6A6A6"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_main"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="80dp"
        android:layout_weight="1"
        android:background="@drawable/button_round10_main"
        android:fontFamily="@font/pretendard_medium"
        android:text="돌아가기"
        android:textColor="@color/white"
        android:textSize="33sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>