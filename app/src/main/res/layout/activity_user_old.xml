<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UserActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/image_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/loadBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 메인 START -->
    <ScrollView
        android:id="@+id/view_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:backgroundTint="@color/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 개인정보 -->
        <LinearLayout
            android:id="@+id/view_sub"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/view_main">

            <LinearLayout
                android:id="@+id/view_top"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- 프로필 START -->
                <LinearLayout
                    android:id="@+id/view_date2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- 프로필 사진 -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImageView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/image_profile_default"
                        android:padding="0dp"
                        android:layout_gravity="center" />

                    <!-- 프로필 이름 START -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileImageView" >

                        <TextView
                            android:id="@+id/text_Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="이수지"
                            android:textColor="@color/black"
                            android:textSize="30sp"
                            android:fontFamily="@font/pretendard_semibold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 님,"
                            android:textColor="@color/black"
                            android:textSize="30sp"
                            android:fontFamily="@font/pretendard_semibold"
                            />

                    </LinearLayout>
                    <!-- 프로필 이름 END -->

                    <TextView
                        android:id="@+id/text_email"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1@naver.com"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:fontFamily="@font/pretendard_regular"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>
                <!-- 프로필 END -->
            </LinearLayout>

            <!-- 정보 -->
            <LinearLayout
                android:id="@+id/view_email"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/pretendard_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

            <!-- 선 -->
            <LinearLayout
                android:id="@+id/line_01"
                android:layout_width="400dp"
                android:layout_height="2dp"
                android:gravity="center"
                android:background="@color/gray"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_birth"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_birth"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="생일"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/pretendard_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText_Name" />

                <TextView
                    android:id="@+id/text_birthday"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:fontFamily="@font/pretendard_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>

            <!-- 선 -->
            <LinearLayout
                android:id="@+id/line_02"
                android:layout_width="400dp"
                android:layout_height="2dp"
                android:gravity="center"
                android:background="@color/gray"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_address"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_address"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="주소"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/pretendard_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText_Name" />

                <EditText
                    android:id="@+id/editText_address"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/pretendard_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText_Birthday" />
            </LinearLayout>

            <!-- 선 -->
            <LinearLayout
                android:id="@+id/line_03"
                android:layout_width="400dp"
                android:layout_height="2dp"
                android:gravity="center"
                android:background="@color/gray"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_my_phone"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_my_phone"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="본인 연락처"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/pretendard_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText_Phone" />

                <EditText
                    android:id="@+id/editText_my"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:inputType="numberDecimal"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/pretendard_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText_Birthday" />
            </LinearLayout>

            <!-- 선 -->
            <LinearLayout
                android:id="@+id/line_04"
                android:layout_width="400dp"
                android:layout_height="2dp"
                android:gravity="center"
                android:background="@color/gray"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_guardian_phone"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_guardian_phone"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="보호자 연락처"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/pretendard_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText_Phone" />

                <EditText
                    android:id="@+id/editText_guardian"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:inputType="numberDecimal"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/pretendard_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText_Birthday" />
            </LinearLayout>

            <!-- 선 -->
            <LinearLayout
                android:id="@+id/line_05"
                android:layout_width="400dp"
                android:layout_height="2dp"
                android:gravity="center"
                android:background="@color/gray"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
            </LinearLayout>

            <TextView
                android:id="@+id/text_score_cog"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="치매가 의심돼요"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- 선 -->
            <LinearLayout
                android:id="@+id/line_06"
                android:layout_width="400dp"
                android:layout_height="2dp"
                android:gravity="center"
                android:background="@color/gray"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save"
                android:layout_width="320dp"
                android:layout_height="60dp"

                android:layout_marginTop="20dp"
                android:background="@drawable/button_round_main"

                android:fontFamily="@font/pretendard_regular"
                android:onClick="Save"
                android:text="저장"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="30dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText_Weight" />

            <TextView
                android:id="@+id/text_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:onClick="Logout"
                android:text="로그아웃"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/pretendard_regular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/back"
                    android:onClick="withdraw"
                    android:text="회원 탈퇴"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/pretendard_regular"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- 메인 END -->

</androidx.constraintlayout.widget.ConstraintLayout>